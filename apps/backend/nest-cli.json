{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "assets": ["**/*.graphql"],
        "deleteOutDir": true,
        "plugins": [
            {
                "name": "@nestjs/graphql",
                "options": {
                    "introspectComments": true
                }
            },
            {
                "name": "@nestjs/swagger",
                "options": {
                    "introspectComments": true
                }
            }
        ]
    }
}
